{
  "name": "instnce-backend",
  "version": "0.1.0",
  "description": "The backend for instnce webapp",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npm-run-all -p start-react start-server-dev",
    "start-server-dev": "nodemon server.js",
    "start-react": "cd frontend && npm install && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nafees-rawji/instnce.git"
  },
  "author": "Instnce",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nafees-rawji/instnce/issues"
  },
  "homepage": "https://github.com/nafees-rawji/instnce#readme",
  "dependencies": {
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "cors": "^2.8.4",
    "axios": "^0.18.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "indent": ["error", 4],
      "no-console": "off"
    }
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2",
    "nodemon": "^1.17.1"
  }
}
